{
  "name": "w3champions-twitch",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "rm -rf dist/ && vite build",
    "serve": "vite preview",
    "packDist": "rm -f dist.zip && npm run build && cd dist/ && zip -r ../dist.zip ./*",
    "packSrc": "rm -f src.zip && zip -r src.zip src *.html favicon.ico .browserslistrc .eslintignore .eslintrc.js .gitignore package.json package-lock.json README.md tsconfig.json vite.config.js",
    "lint": "eslint --ext .js,.vue,.ts --ignore-pattern .gitignore --fix src"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "lru-cache": "^11.2.2",
    "pinia": "^3.0.4",
    "vue": "^3.5.24",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.39.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vue/eslint-config-prettier": "^10.1.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^10.5.1",
    "globals": "^16.5.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "sass": "^1.80.5",
    "typescript": "^5.6.3",
    "vite": "^7.2.4",
    "vite-plugin-mkcert": "^1.17.9"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
